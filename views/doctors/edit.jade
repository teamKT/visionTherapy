extends ../layout.jade

block content
  .panel.panel-default
    .panel-heading
      .panel-title Settings for User #{currentUser.username}
    .panel-body

      form.form-horizontal(action="/doctors/#{currentUser.id}?_method=PUT" method="POST")
        .form-group.form-group-lg
          p
            input.form-control.input-lg(type="text" name="doctor[firstname]" 
            value="#{currentUser.firstname}" placeholder="Enter First Name")
          p
            input.form-control.input-lg(type="text" name="doctor[lastname]" 
            value="#{currentUser.lastname}" placeholder="Enter Last Name")
          p
            input.form-control.input-lg(type="text" name="doctor[email]" 
            value="#{currentUser.email}" placeholder="Enter Email")  
          p
            input.form-control.input-lg(type="password" name="doctor[password]" 
            value="" placeholder="Enter new Password")
          p
            input.btn.btn-default.push-right(type="submit" value="Submit")
            a(href="/doctors/#{currentUser.id}")
              button.btn.btn-default(type="button") Cancel
            if (message)
              p.text-center.text-danger= message

      form.form-horizontal(action="/doctors/#{currentUser.id}?_method=DELETE" method="POST")
        input.btn.btn-danger.btn-lg.btn-block(type="submit" value="DELETE ACCOUNT")








    
    